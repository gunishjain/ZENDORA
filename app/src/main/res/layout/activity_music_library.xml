<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg4"
    tools:context=".musicLibrary">


    <Button
        android:id="@+id/musicbt1"
        android:layout_width="157dp"
        android:layout_height="127dp"
        android:background="@drawable/musicbt"
        android:onClick="bt1"
        android:text="SONGS"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.692"
        app:layout_constraintStart_toEndOf="@+id/musicbt2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/musicbt2"
        android:layout_width="157dp"
        android:layout_height="127dp"
        android:background="@drawable/musicbt"
        android:onClick="bt2"
        android:text="Guided Meditation"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.149"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/musicbt3"
        android:layout_width="157dp"
        android:layout_height="127dp"
        android:background="@drawable/musicbt"
        android:onClick="bt3"
        android:text="Podcasts"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.937"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/musicbt1"
        app:layout_constraintVertical_bias="0.177" />

    <Button
        android:id="@+id/musicbt4"
        android:layout_width="157dp"
        android:layout_height="127dp"
        android:background="@drawable/musicbt"
        android:onClick="bt4"
        android:text="Binaural Beats"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/musicbt3"
        app:layout_constraintHorizontal_bias="0.469"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/musicbt2"
        app:layout_constraintVertical_bias="0.177" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sarala"
        android:text="MUSIC"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.539"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.105" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="364dp"
        android:layout_height="66dp"
        android:layout_marginStart="52dp"
        android:text="Here are some category of music you can listen to and relax"
        android:textColor="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/homebt"
        android:layout_width="106dp"
        android:layout_height="57dp"
        android:layout_marginBottom="28dp"

        android:background="@drawable/buttonmain"
        android:fontFamily="@font/sarala"
        android:onClick="homebt"
        android:text="HOME"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.055"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fading_text_view"
        app:layout_constraintVertical_bias="0.908" />

    <Button
        android:id="@+id/music"
        android:layout_width="108dp"
        android:layout_height="57dp"
        android:layout_marginBottom="28dp"

        android:background="@drawable/buttonmain"
        android:fontFamily="@font/sarala"
        android:onClick="musicbt"
        android:text="MUSIC"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.986"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fading_text_view"
        app:layout_constraintVertical_bias="0.908" />

    <Button
        android:id="@+id/meditatebt"
        android:layout_width="105dp"
        android:layout_height="58dp"
        android:layout_marginBottom="28dp"

        android:background="@drawable/buttonmain"
        android:onClick="meditatebt"
        android:text="MEDIDATE"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fading_text_view"
        app:layout_constraintVertical_bias="0.908" />


</androidx.constraintlayout.widget.ConstraintLayout>